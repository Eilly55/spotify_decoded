<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView android:textColor="@color/notification_text" android:id="@id/title" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <TextView android:textColor="@color/notification_text" android:id="@id/subtitle" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <FrameLayout android:layout_width="fill_parent" android:layout_height="@dimen/entity_ui_frame_height" android:layout_marginTop="@dimen/push_notification_margin">
        <LinearLayout android:layout_gravity="start" android:orientation="horizontal" android:id="@id/interaction_layout" android:layout_width="fill_parent" android:layout_height="fill_parent" style="@style/InteractionLayoutBackground">
            <ImageView android:layout_gravity="center_vertical" android:id="@id/entity_ui_image" android:layout_width="@dimen/entity_ui_image_dimen" android:layout_height="@dimen/entity_ui_image_dimen" android:scaleType="centerCrop" android:contentDescription="@string/rich_notification_image" style="@style/EntityImage" />
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="@dimen/entity_ui_margin" android:layout_marginEnd="@dimen/entity_ui_image_end_margin">
                <TextView android:textColor="@color/black" android:id="@id/entity_ui_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textFontWeight="500" />
                <TextView android:textColor="@color/black" android:id="@id/entity_ui_subtitle" android:layout_width="fill_parent" android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <ImageButton android:layout_gravity="end|center" android:id="@id/play_button" android:background="@drawable/play_button" android:layout_width="@dimen/entity_ui_play_button_dimen" android:layout_height="@dimen/entity_ui_play_button_dimen" android:contentDescription="@string/rich_notification_play_button" android:layout_marginEnd="@dimen/entity_ui_margin" />
    </FrameLayout>
</LinearLayout>