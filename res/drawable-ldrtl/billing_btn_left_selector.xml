<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/billing_btn_bg" />
            <corners android:topLeftRadius="0.0dip" android:topRightRadius="@dimen/billing_btn_border_radius" android:bottomLeftRadius="0.0dip" android:bottomRightRadius="@dimen/billing_btn_border_radius" />
            <stroke android:width="@dimen/billing_btn_border_size" android:color="@color/billing_btn_selected_border" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/billing_btn_bg" />
            <corners android:topLeftRadius="0.0dip" android:topRightRadius="@dimen/billing_btn_border_radius" android:bottomLeftRadius="0.0dip" android:bottomRightRadius="@dimen/billing_btn_border_radius" />
            <stroke android:width="@dimen/billing_btn_border_size" android:color="@color/billing_btn_not_selected_border" />
        </shape>
    </item>
</selector>