<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/solar_button_bordered_border_width" android:color="#0dffffff" />
            <solid android:color="@color/opacity_white_0" />
            <size android:height="@dimen/solar_button_bordered_height" />
            <corners android:radius="@dimen/solar_button_bordered_corner_radius" />
            <padding android:left="@dimen/solar_button_bordered_padding" android:top="0.0px" android:right="@dimen/solar_button_bordered_padding" android:bottom="0.0px" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <stroke android:width="@dimen/solar_button_bordered_border_width" android:color="@color/green" />
            <solid android:color="@color/opacity_white_0" />
            <size android:height="@dimen/solar_button_bordered_height" />
            <corners android:radius="@dimen/solar_button_bordered_corner_radius" />
            <padding android:left="@dimen/solar_button_bordered_padding" android:top="0.0px" android:right="@dimen/solar_button_bordered_padding" android:bottom="0.0px" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/solar_button_bordered_border_width" android:color="@color/opacity_white_10" />
            <solid android:color="@color/opacity_white_0" />
            <size android:height="@dimen/solar_button_bordered_height" />
            <corners android:radius="@dimen/solar_button_bordered_corner_radius" />
            <padding android:left="@dimen/solar_button_bordered_padding" android:top="0.0px" android:right="@dimen/solar_button_bordered_padding" android:bottom="0.0px" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/solar_button_bordered_border_width" android:color="@color/opacity_white_10" />
            <solid android:color="@color/opacity_white_0" />
            <size android:height="@dimen/solar_button_bordered_height" />
            <corners android:radius="@dimen/solar_button_bordered_corner_radius" />
            <padding android:left="@dimen/solar_button_bordered_padding" android:top="0.0px" android:right="@dimen/solar_button_bordered_padding" android:bottom="0.0px" />
        </shape>
    </item>
</selector>