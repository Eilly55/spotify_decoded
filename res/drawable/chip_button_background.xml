<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green_dark" />
            <corners android:radius="@dimen/chip_button_corner_radius" />
            <stroke android:width="1.0dip" android:color="@color/green_light" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/chip_button_corner_radius" />
            <stroke android:width="1.0dip" android:color="@color/gray_50" />
        </shape>
    </item>
</selector>