<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <set>
            <objectAnimator android:interpolator="@anim/out_hard_interpolator" android:duration="100" android:valueTo="0f" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@anim/out_hard_interpolator" android:duration="100" android:valueTo="0f" android:valueType="floatType" android:propertyName="scaleY" />
            <objectAnimator android:interpolator="@anim/out_hard_interpolator" android:duration="100" android:valueTo="0f" android:valueType="floatType" android:propertyName="alpha" />
        </set>
    </item>
    <item android:state_selected="true">
        <set>
            <objectAnimator android:interpolator="@anim/out_hard_interpolator" android:duration="200" android:valueTo="1f" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:interpolator="@anim/out_hard_interpolator" android:duration="200" android:valueTo="1f" android:valueType="floatType" android:propertyName="scaleY" />
            <objectAnimator android:interpolator="@anim/out_hard_interpolator" android:duration="200" android:valueTo="1f" android:valueType="floatType" android:propertyName="alpha" />
        </set>
    </item>
</selector>