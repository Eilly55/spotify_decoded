<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="200" android:valueTo="2.0dip" android:valueType="floatType" android:propertyName="elevation" />
            <objectAnimator android:duration="200" android:valueFrom="1f" android:valueTo="0.98f" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:duration="200" android:valueFrom="1f" android:valueTo="0.98f" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="200" android:valueTo="8.0dip" android:valueType="floatType" android:propertyName="elevation" />
            <objectAnimator android:duration="200" android:valueFrom="0.98f" android:valueTo="1f" android:valueType="floatType" android:propertyName="scaleX" />
            <objectAnimator android:duration="200" android:valueFrom="0.98f" android:valueTo="1f" android:valueType="floatType" android:propertyName="scaleY" />
        </set>
    </item>
</selector>